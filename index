<h2>‚öî Case Battle (vs Bot)</h2>
<button onclick="battle()">Start Battle (200 coins)</button>
<div id="battleResult"></div>
</div>

<script>

const skins = [
{ name:"Glock Fade", rarity:"legendary", value:1000 },
{ name:"AK Redline", rarity:"epic", value:600 },
{ name:"M4A4 Neo-Noir", rarity:"epic", value:500 },
{ name:"AWP Asiimov", rarity:"rare", value:300 },
{ name:"USP-S Guardian", rarity:"rare", value:200 },
{ name:"P250 Sand Dune", rarity:"common", value:50 },
{ name:"MP9 Storm", rarity:"common", value:40 }
];

let balance = localStorage.getItem("balance") 
    ? parseInt(localStorage.getItem("balance")) 
    : 1000;

let inventory = JSON.parse(localStorage.getItem("inventory")) || [];

updateUI();

function updateUI(){
    document.getElementById("balance").innerText = balance;
    document.getElementById("inventory").innerHTML = 
        inventory.map(i => `<div class="${i.rarity}">${i.name}</div>`).join("");
}

function save(){
    localStorage.setItem("balance",balance);
    localStorage.setItem("inventory",JSON.stringify(inventory));
}

function getRandomSkin(){
    let rand = Math.random();
    if(rand < 0.03) return skins[0];
    if(rand < 0.10) return skins[1];
    if(rand < 0.20) return skins[2];
    if(rand < 0.40) return skins[3];
    if(rand < 0.65) return skins[4];
    if(rand < 0.85) return skins[5];
    return skins[6];
}

function openCase(type){

    let cost = type==="standard"?100:type==="pro"?250:500;
    if(balance < cost) return alert("Not enough coins!");

    balance -= cost;
    save();
    updateUI();

    let rollDiv = document.getElementById("roll");
    rollDiv.innerHTML="";
    rollDiv.style.left="0px";

    let finalSkin = getRandomSkin();

    let items=[];
    for(let i=0;i<30;i++){
        let skin = skins[Math.floor(Math.random()*skins.length)];
        items.push(`<div class="item ${skin.rarity}">${skin.name}</div>`);
    }

    items[25] = `<div class="item ${finalSkin.rarity}">${finalSkin.name}</div>`;
    rollDiv.innerHTML = items.join("");

    setTimeout(()=>{
        rollDiv.style.left="-2500px";
    },100);

    setTimeout(()=>{
        inventory.push(finalSkin);
        save();
        updateUI();
        alert("You won: "+finalSkin.name);
    },2200);
}

function battle(){

    if(balance < 200) return alert("Not enough coins!");

    balance -= 200;

    let player = getRandomSkin();
    let bot = getRandomSkin();

    let result;

    if(player.value > bot.value){
        balance += 400;
        result="üèÜ You WIN!";
    } else if(player.value < bot.value){
        result="‚ùå Bot Wins!";
    } else {
        balance += 200;
        result="ü§ù Draw!";
    }

    document.getElementById("battleResult").innerHTML =
        `You: <span class="${player.rarity}">${player.name}</span><br>
         Bot: <span class="${bot.rarity}">${bot.name}</span><br><br>${result}`;

    save();
    updateUI();
}

</script>

